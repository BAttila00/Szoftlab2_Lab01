@page "/"
@model Otthonbazar.Pages.Advertisements.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>

<div class="container">
    <div class="row">
        <section class="col-lg-4">
            <h2>Keresés</h2>
        </section>
        <section class="col-lg-8">
            <h2>Hirdetések</h2>
            @foreach (var item in Model.Advertisement) {
                <article class="col-md-6 offset-md-0">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top img-responsive" src=" https://via.placeholder.com/340x255" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">Card title</h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            <a href="#" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                </article>

            }
        </section>
    </div>
</div>

